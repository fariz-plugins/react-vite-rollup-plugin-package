{
  "compilerOptions": {
    "target": "ES2020", 
    "lib": ["ES2020", "DOM", "DOM.Iterable"], 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "jsx": "react-jsx", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "composite": false,
    "outDir": "dist", 
    "rootDir": "src", 
    "isolatedModules": true, 
    "noEmit": false 
  },
  "include": ["src"], 
  "exclude": ["node_modules", "dist"] 
}