{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript target
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Include DOM types for React
    "module": "ESNext", // Use ESM for tree-shaking
    "moduleResolution": "node", // Use Node.js module resolution
    "jsx": "react-jsx", // Support React JSX
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable ES module interop
    "skipLibCheck": true, // Skip library checks for faster builds
    "declaration": true, // Generate .d.ts files for TypeScript support
    "declarationDir": "dist/types", // Output directory for .d.ts files
    "outDir": "dist", // Output directory for compiled JS files
    "rootDir": "src", // Source directory
    "isolatedModules": true, // Ensure each file is a module
    "noEmit": false // Allow TypeScript to emit JS files
  },
  "include": ["src"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}